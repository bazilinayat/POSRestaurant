<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:POSRestaurant.ViewModels"
             xmlns:data="clr-namespace:POSRestaurant.Data"
             xmlns:models="clr-namespace:POSRestaurant.Models"
             xmlns:controls="clr-namespace:POSRestaurant.Controls"
             xmlns:converters="clr-namespace:POSRestaurant.Converters"
             x:Class="POSRestaurant.Pages.MainPage"
             Shell.NavBarIsVisible="True"
             x:DataType="vm:HomeViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:IntToBoolConverter x:Key="IntToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions=".75*, .25*">
        <Grid Grid.Column="0"
              Margin="5"
            ColumnDefinitions="Auto, *">
            <Grid Grid.Column="0">
                <controls:CategoriesListControl Grid.Row="1" 
                                                    Categories="{Binding Categories}" 
                                                    OnCategorySelected="CategoriesListControl_OnCategorySelected" />
            </Grid>

            <Grid Grid.Column="1"
                  RowDefinitions="Auto, *, Auto">
                <SearchBar Grid.Row="0"
                    BackgroundColor="{StaticResource LightWheat}"
                           HeightRequest="25"
                           Text="{Binding TextSearch}"
                           SearchCommand="{Binding SearchItemsCommand}"
                           TextChanged="SearchBar_TextChanged"
                           CancelButtonColor="Red"
                           HorizontalTextAlignment="Start"
                           Placeholder="Search Items..."
                           TextColor="White"
                           Margin="20"/>
                <controls:MenuItemsListControl Grid.Row="1" MenuItems="{Binding MenuItems}" OnMenuItemSelected="MenuItemsListControl_OnMenuItemSelected"/>
                <Border Grid.Row="2" 
                        Padding="5"
                        Stroke="Black"
                        StrokeShape="RoundRectangle 10"
                        IsEnabled="{Binding OrderTypeEnable}"
                        BackgroundColor="{StaticResource AllBackground}">
                    <Grid ColumnDefinitions="0.50*, 0.50*">
                        <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                            <Label Text="Number of People" FontSize="16" VerticalOptions="Center"/>
                            <ImageButton 
                                         Source="minus_regular_24.png"
                                         BackgroundColor="LightYellow"
                                         CornerRadius="8"
                                         HeightRequest="30"
                                         WidthRequest="30"
                                         Padding="5"
                                         Command="{Binding DecreaseNumberOfPeopleCommand}"/>
                            <Label 
                                   Text="{Binding NumberOfPeople}"
                                   HeightRequest="30"
                                   WidthRequest="60"
                                   Padding="5"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"/>
                            <ImageButton
                                         Source="plus_regular_24.png"
                                         BackgroundColor="LightYellow"
                                         CornerRadius="8"
                                         HeightRequest="30"
                                         WidthRequest="30"
                                         Padding="5"
                                         Command="{Binding IncreaseNumberOfPeopleCommand}"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                            <Label Text="Waiter" FontSize="16" VerticalOptions="Center"/>
                            <Picker ItemsSource="{Binding Waiters}"
                                    SelectedItem="{Binding SelectedWaiter, Mode=TwoWay}"
                                    ItemDisplayBinding="{Binding Name}"
                                    BackgroundColor="LightYellow">
                            </Picker>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>
                <BoxView IsVisible="{Binding IsLoading}"
                         HorizontalOptions="Fill"
                         VerticalOptions="Fill"
                         Color="{StaticResource LightWheat}"
                         Opacity="0.3"/>
                <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                   HeightRequest="25" 
                                   WidthRequest="25" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center"
                                   Color="LightBlue"/>
            </Grid>
        </Grid>
        <Border Grid.Column="1"
                Padding="0, 10"
                Margin="5"
                Stroke="Black">
            <Grid Grid.Column="1" 
              RowDefinitions="Auto, *, Auto">
            <VerticalStackLayout Grid.Row="0" 
                                 Spacing="5"
                                 Padding="10, 0">
                    <Label Text="{Binding TableNumber, StringFormat='Table: {0}'}"
                            FontSize="25"
                            FontAttributes="Bold"/>
                    <Label Text="Current Order Items"
                       FontSize="25"
                       FontAttributes="Bold"/>
                <controls:CurrentDateTimeControl />
            </VerticalStackLayout>
            <Grid Grid.Row="1"
                  Padding="10"
                  BackgroundColor="{StaticResource AllBackground}">
                <CollectionView
                    ItemsSource="{Binding CartItems}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical"
                                           ItemSpacing="2"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:CartItemModel">
                            <Grid>
                                <Border Padding="5"
                                        StrokeShape="RoundRectangle 10">
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding Name}" 
                                               FontSize="18"
                                               FontAttributes="Bold"/>
                                        <Grid ColumnDefinitions="Auto, *">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Price, StringFormat='{0:C}'}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="MediumSeaGreen"/>
                                            <Grid Grid.Column="1"
                                                  ColumnDefinitions="*, 2*, *"
                                                  WidthRequest="120"
                                                  HorizontalOptions="End">
                                                <ImageButton Grid.Column="0"
                                                             Source="minus_regular_24.png"
                                                             BackgroundColor="LightYellow"
                                                             CornerRadius="8"
                                                             HeightRequest="30"
                                                             WidthRequest="30"
                                                             Padding="5"
                                                             Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=DecreaseQuantityCommand}"
                                                             CommandParameter="{Binding .}"/>
                                                <Label Grid.Column="1"
                                                       Text="{Binding Quantity}"
                                                       HeightRequest="30"
                                                       WidthRequest="60"
                                                       Padding="5"
                                                       FontSize="18"
                                                       HorizontalOptions="Center"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalTextAlignment="Center"/>
                                                <ImageButton Grid.Column="2"
                                                             Source="plus_regular_24.png"
                                                             BackgroundColor="LightYellow"
                                                             CornerRadius="8"
                                                             HeightRequest="30"
                                                             WidthRequest="30"
                                                             Padding="5"
                                                             Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=IncreaseQuantityCommand}"
                                                             CommandParameter="{Binding .}"/>
                                            </Grid>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Border>
                                <ImageButton Source="x_regular_24.png" 
                                             HorizontalOptions="End"
                                             VerticalOptions="Start"
                                             CornerRadius="5"
                                             HeightRequest="25"
                                             WidthRequest="25"
                                             BackgroundColor="Red"
                                             ToolTipProperties.Text="Remove Item"
                                             Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=RemoveItemFromCartCommand}"
                                             CommandParameter="{Binding .}">
                                    <ImageButton.Shadow>
                                        <Shadow Brush="Red"/>
                                    </ImageButton.Shadow>
                                </ImageButton>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
            <VerticalStackLayout Grid.Row="2"
                                 Padding="15, 10, 15, 0">
                <Border BackgroundColor="{StaticResource AllBackground}"
                        Padding="10"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="red"/>
                    </Border.Shadow>
                    <Grid RowDefinitions="Auto, Auto, Auto"
                          ColumnDefinitions="2*, 3*"
                          RowSpacing="8">
                        <!--<Label Grid.Row="0"
                               Grid.Column="0"
                               Text="SubTotal"
                               Style="{StaticResource lbl}"/>
                        <Label Grid.Row="0"
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               Text="{Binding SubTotal, StringFormat='{0:C}'}" />-->
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               FontAttributes="Bold"
                               Text="Total"
                               Style="{StaticResource lbl}"/>
                            <Label Grid.Row="0"
                               Grid.Column="1"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Text="{Binding Total, StringFormat='{0:C}'}" />
                            <Grid Grid.Row="1"
                              Grid.ColumnSpan="2"
                              ColumnDefinitions="Auto, *, Auto, Auto"
                              ColumnSpacing="10">
                            <Button Grid.Column="0"
                                    Text="Clear"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    CornerRadius="5"
                                    MinimumHeightRequest="25"
                                    MinimumWidthRequest="25"
                                    BackgroundColor="Red"
                                    Command="{Binding ClearCartCommand}"/>
                            <Button Grid.Column="2"
                                    Text="Save"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    CornerRadius="5"
                                    MinimumHeightRequest="25"
                                    MinimumWidthRequest="25"
                                    BackgroundColor="MediumSeaGreen"
                                    Clicked="PlaceOrder_Clicked">
                            </Button>

                        </Grid>
                        <Button Grid.Row="2"
                                Text="Cancel"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                CornerRadius="5"
                                BackgroundColor="Red"
                                Clicked="CancelButton_Clicked" />
                    </Grid>
                </Border>
            </VerticalStackLayout>
        </Grid>
        </Border>
    </Grid>

</ContentPage>
